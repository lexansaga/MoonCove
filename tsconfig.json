{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Ensures paths are relative to the project root
    "paths": {
      "@Fonts/*": ["./assets/fonts/*"],
      "@Assets/*": ["./assets/images/*"],
      "@Components/*": ["./components/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
